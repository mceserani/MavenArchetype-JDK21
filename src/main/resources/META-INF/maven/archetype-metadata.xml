<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="Basic JDK 21 Archetype">

	<requiredProperties>
        <requiredProperty key="main-class-name">
        </requiredProperty>
        <requiredProperty key="jar-final-name">
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" packaged="false">
            <directory></directory>
            <includes>
				<include>.gitattributes</include>
                <include>_gitignore</include>
            </includes>
            <excludes>
                <exclude>**/*.bak</exclude>
            </excludes>
            <!-- Mappatura per rinominare _gitignore in .gitignore -->
            <fileMapping>
                <sourceName>_gitignore</sourceName>
                <targetName>.gitignore</targetName>
            </fileMapping>
        </fileSet>

        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
			<includes>
                <include>**/*.java</include>
            </includes>
			<excludes>
                <exclude>**/*.bak</exclude>
            </excludes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>src/test/java</directory>
			<includes>
                <include>**/*.java</include>
            </includes>
			<excludes>
                <exclude>**/*.bak</exclude>
            </excludes>
        </fileSet>
    </fileSets>

</archetype-descriptor>